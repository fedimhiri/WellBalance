{% for activite in activite_physiques %}
    <tr>
        <td><span class="fw-bold">#{{ activite.id }}</span></td>
        <td>
            <div class="d-flex justify-content-start align-items-center user-name">
                <div class="avatar-wrapper">
                    <div class="avatar avatar-sm me-3"><span class="avatar-initial rounded-circle bg-label-warning">{{ activite.nom|slice(0,2)|upper }}</span></div>
                </div>
                <div class="d-flex flex-column">
                    <span class="fw-semibold">{{ activite.nom }}</span>
                    <small class="text-muted">{{ activite.description|slice(0, 20) }}...</small>
                </div>
            </div>
        </td>
        <td>{{ activite.typeActivite }}</td>
        <td><span class="badge bg-label-info">{{ activite.niveau }}</span></td>
        <td>{{ activite.dureeEstimee }} min</td>
        <td>{{ activite.caloriesEstimees }} kcal</td>
        <td>
            {% if activite.objectifSportif %}
                <span class="badge bg-label-secondary"><i class="bx bx-target-lock me-1"></i> {{ activite.objectifSportif.libelle|slice(0, 10) }}...</span>
            {% else %}
                <span class="text-muted">N/A</span>
            {% endif %}
        </td>
            <td>
                {% if activite.actif %}
                <span class="badge bg-label-success"><i class="bx bx-check"></i></span>
                {% else %}
                <span class="badge bg-label-secondary"><i class="bx bx-x"></i></span>
                {% endif %}
        </td>
        <td>
            <div class="d-flex align-items-center">
                <a href="{{ path('app_activite_physique_show', {'id': activite.id}) }}" class="text-body btn-icon-action" data-bs-toggle="tooltip" title="Voir"><i class="bx bx-show-alt"></i></a>
                <a href="{{ path('app_activite_physique_edit', {'id': activite.id}) }}" class="text-body btn-icon-action" data-bs-toggle="tooltip" title="Editer"><i class="bx bx-edit-alt"></i></a>
            </div>
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="9" class="text-center py-5">
            <i class="bx bx-search fs-1 text-muted mb-2"></i>
            <p class="mb-0">Aucune activité trouvée.</p>
        </td>
    </tr>
{% endfor %}
