{% extends 'backend/baseend.html.twig' %}

{% block title %}Editer Activité{% endblock %}

{% block body %}
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Activités /</span> Editer</h4>

     <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg" style="border-radius: 16px; overflow: hidden;">
                <div class="card-header bg-warning text-white text-center py-4" style="background: linear-gradient(135deg, #ffab00 0%, #ffcd57 100%);">
                    <h4 class="mb-0 text-white"><i class="bx bx-edit me-2"></i> Editer l'Activité</h4>
                    <p class="mb-0 text-white-50 mt-1">Modifiez les détails de votre session</p>
                </div>
                <div class="card-body p-4 p-md-5 bg-white">
                    {{ form_start(form) }}
                        {% if not form.vars.valid %}
                             <div class="alert alert-danger mb-4">
                                <i class="bx bx-error-circle me-2"></i> Il y a des erreurs dans le formulaire. Veuillez vérifier les champs.
                                {{ form_errors(form) }}
                            </div>
                        {% endif %}
                         <div class="row g-3">
                            <div class="col-12">
                                {{ form_label(form.nom, 'Nom de l\'activité', {'label_attr': {'class': 'form-label fw-bold small text-uppercase'}}) }}
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text bg-light border-end-0"><i class="bx bx-dumbbell"></i></span>
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control ps-2'}}) }}
                                </div>
                                <div class="form-text text-danger">{{ form_errors(form.nom) }}</div>
                            </div>

                            <div class="col-md-6">
                                {{ form_label(form.typeActivite, 'Type', {'label_attr': {'class': 'form-label fw-bold small text-uppercase'}}) }}
                                {{ form_widget(form.typeActivite, {'attr': {'class': 'form-control'}}) }}
                                <div class="form-text text-danger">{{ form_errors(form.typeActivite) }}</div>
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.niveau, 'Niveau', {'label_attr': {'class': 'form-label fw-bold small text-uppercase'}}) }}
                                {{ form_widget(form.niveau, {'attr': {'class': 'form-select'}}) }}
                                <div class="form-text text-danger">{{ form_errors(form.niveau) }}</div>
                            </div>

                             <div class="col-md-6">
                                {{ form_label(form.dureeEstimee, 'Durée (min)', {'label_attr': {'class': 'form-label fw-bold small text-uppercase'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bx bx-time-five"></i></span>
                                    {{ form_widget(form.dureeEstimee, {'attr': {'class': 'form-control ps-2'}}) }}
                                </div>
                                <div class="form-text text-danger">{{ form_errors(form.dureeEstimee) }}</div>
                            </div>
                             <div class="col-md-6">
                                {{ form_label(form.caloriesEstimees, 'Calories', {'label_attr': {'class': 'form-label fw-bold small text-uppercase'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bx bx-fire"></i></span>
                                    {{ form_widget(form.caloriesEstimees, {'attr': {'class': 'form-control ps-2'}}) }}
                                </div>
                                <div class="form-text text-danger">{{ form_errors(form.caloriesEstimees) }}</div>
                            </div>

                            <div class="col-12">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold small text-uppercase'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                                <div class="form-text text-danger">{{ form_errors(form.description) }}</div>
                            </div>

                            <div class="col-12">
                                {{ form_label(form.objectifSportif, 'Objectif Lié', {'label_attr': {'class': 'form-label fw-bold small text-uppercase'}}) }}
                                {{ form_widget(form.objectifSportif, {'attr': {'class': 'form-select'}}) }}
                                <div class="form-text text-danger">{{ form_errors(form.objectifSportif) }}</div>
                            </div>

                            <div class="col-12 mt-3">
                                <div class="form-check form-switch p-0 d-flex align-items-center gap-3 border rounded p-3 bg-light">
                                    {{ form_widget(form.actif, {'attr': {'class': 'form-check-input ms-0', 'style': 'margin-left: 0 !important;'}}) }}
                                    <div>
                                        {{ form_label(form.actif, 'Activité Active', {'label_attr': {'class': 'form-check-label fw-bold m-0'}}) }}
                                        <small class="d-block text-muted">Cette activité doit-elle compter dans vos statistiques ?</small>
                                    </div>
                                </div>
                                <div class="form-text text-danger">{{ form_errors(form.actif) }}</div>
                            </div>
                        </div>

                        <div class="mt-4 pt-3 d-flex justify-content-between align-items-center border-top">
                             <div class="d-flex align-items-center">
                                {{ include('activite_physique/_delete_form.html.twig') }}
                             </div>
                             <div class="d-flex gap-2">
                                 {{ form_widget(form._token) }}
                                 <a href="{{ path('app_activite_physique_index') }}" class="btn btn-outline-secondary rounded-pill px-3">Annuler</a>
                                 <button type="submit" class="btn btn-create rounded-pill px-4 shadow-sm hover-elevate">
                                    <i class="bx bx-save me-2"></i> Enregistrer
                                 </button>
                             </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
