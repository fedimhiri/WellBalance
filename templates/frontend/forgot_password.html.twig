{# templates/frontend/forgot_password.html.twig #}
{% extends 'frontend/base_frontend.html.twig' %}

{% block title %}Mot de passe oublié - Clinique Médicale{% endblock %}

{% block body %}
<div class="auth-creative-wrapper py-5">
    <div class="auth-creative-inner">
        <div class="creative-card-wrapper">
            <div class="card my-4 overflow-hidden" style="z-index: 1">
                <div class="row flex-1 g-0">
                    <!-- Formulaire mot de passe oublié -->
                    <div class="col-lg-6 h-100 my-auto order-1 order-lg-0">
                        <div class="creative-card-body card-body p-sm-5">
                            <h2 class="fs-20 fw-bolder mb-4">Réinitialiser le mot de passe</h2>
                            <h4 class="fs-13 fw-bold mb-2">Vous avez oublié votre mot de passe ?</h4>
                            <p class="fs-12 fw-medium text-muted">
                                Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                            </p>
                            
                            {% if app.session.flashbag.has('success') %}
                                <div class="alert alert-success">
                                    {% for message in app.flashes('success') %}
                                        {{ message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                            
                            {% if app.session.flashbag.has('error') %}
                                <div class="alert alert-danger">
                                    {% for message in app.flashes('error') %}
                                        {{ message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                            
                            <form method="POST" action="{{ path('frontend_forgot_password') }}" class="w-100 mt-4 pt-2">
                                <div class="mb-4">
                                    <input type="email" 
                                           name="email" 
                                           class="form-control" 
                                           placeholder="Adresse email" 
                                           required>
                                </div>
                                
                                <div class="mt-5">
                                    <button type="submit" class="btn btn-lg btn-primary w-100">
                                        Envoyer le lien de réinitialisation
                                    </button>
                                </div>
                            </form>
                            
                            <div class="w-100 mt-5 text-center mx-auto">
                                <div class="mb-4 border-bottom position-relative">
                                    <span class="small py-1 px-3 text-uppercase text-muted bg-white position-absolute translate-middle">
                                        ou
                                    </span>
                                </div>
                                
                                <div class="d-flex align-items-center justify-content-center gap-2">
                                    <a href="{{ path('frontend_login') }}" class="btn btn-outline-secondary flex-fill">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>
                                        Se connecter
                                    </a>
                                    <a href="{{ path('frontend_register') }}" class="btn btn-outline-secondary flex-fill">
                                        <i class="bi bi-person-plus me-2"></i>
                                        Créer un compte
                                    </a>
                                </div>
                            </div>
                            
                            <div class="mt-5 text-muted text-center">
                                <a href="{{ path('app_frontend_vue') }}" class="text-primary">
                                    <i class="bi bi-arrow-left me-1"></i>
                                    Retour à l'accueil
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Image côté -->
                    <div class="col-lg-6 bg-primary order-0 order-lg-1">
                        <div class="h-100 d-flex align-items-center justify-content-center p-4">
                            <div class="text-center text-white">
                                <i class="bi bi-key display-1 mb-3"></i>
                                <h3 class="fw-bold mb-3">Sécurité du compte</h3>
                                <p class="mb-4">
                                    Pour votre sécurité, le lien de réinitialisation expirera dans 24 heures.
                                    Assurez-vous de choisir un mot de passe fort et unique.
                                </p>
                                <div class="alert alert-light">
                                    <small class="text-dark">
                                        <i class="bi bi-shield-check me-1"></i>
                                        Votre sécurité est notre priorité
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.auth-creative-wrapper {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.creative-card-wrapper {
    max-width: 900px;
    margin: 0 auto;
}

.card {
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.bg-primary {
    background: linear-gradient(135deg, var(--bs-primary), #0d6efd) !important;
}

.btn-primary {
    background: linear-gradient(135deg, var(--bs-primary), #0d6efd);
    border: none;
    padding: 12px;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #0b5ed7, #0a58ca);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
}

.form-control {
    padding: 12px 15px;
    border-radius: 8px;
    border: 1px solid #dee2e6;
}

.form-control:focus {
    border-color: var(--bs-primary);
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

.alert-light {
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
}

@media (max-width: 991px) {
    .auth-creative-wrapper {
        padding: 2rem 1rem;
    }
    
    .col-lg-6.bg-primary {
        padding: 3rem 1rem;
        min-height: 300px;
    }
}
</style>
{% endblock %}