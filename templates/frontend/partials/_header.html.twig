{# templates/frontend/partials/_header.html.twig #}
<header id="header" class="header fixed-top">
    
    <!-- Top Bar -->
    <div class="topbar d-flex align-items-center dark-background">
        <div class="container d-flex justify-content-center justify-content-md-between">
            <div class="contact-info d-flex align-items-center">
                <i class="bi bi-envelope d-flex align-items-center">
                    <a href="mailto:contact@example.com">contact@clinique.com</a>
                </i>
                <i class="bi bi-phone d-flex align-items-center ms-4">
                    <span>{{ phone_number|default('+1 5589 55488 55') }}</span>
                </i>
            </div>
            <div class="social-links d-none d-md-flex align-items-center">
                <a href="#" class="twitter"><i class="bi bi-twitter-x"></i></a>
                <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
            </div>
        </div>
    </div><!-- End Top Bar -->
    
    <!-- Main Header -->
    <div class="branding d-flex align-items-center">
        <div class="container position-relative d-flex align-items-center justify-content-between">
            <!-- Logo -->
            <a href="{{ path('app_frontend_vue') }}" class="logo d-flex align-items-center">
                <h1 class="sitename">{{ site_name|default('Clinique Médicale') }}</h1>
            </a>
            
            <!-- Navigation -->
            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="{{ path('app_frontend_vue') }}" class="active">Accueil</a></li>
                    <li><a href="{{ path('app_frontend_vue') }}">À propos</a></li>
                    <li><a href="{{ path('app_frontend_vue') }}">Départements</a></li>
                    <li><a href="{{ path('app_frontend_vue') }}">Services</a></li>
                    <li><a href="{{ path('app_frontend_vue') }}">Médecins</a></li>
                    <li class="dropdown">
                        <a href="#">
                            <span>Plus</span>
                            <i class="bi bi-chevron-down toggle-dropdown"></i>
                        </a>
                        <ul>
                            <li><a href="{{ path('app_frontend_vue') }}">Prendre rendez-vous</a></li>
                            <li><a href="{{ path('app_frontend_vue') }}">Témoignages</a></li>
                            <li><a href="{{ path('app_frontend_vue') }}">FAQ</a></li>
                            <li><a href="{{ path('app_frontend_vue') }}">Galerie</a></li>
                        </ul>
                    </li>
                    <li><a href="{{ path('app_frontend_vue') }}">Contact</a></li>
                    <li><a href="{{ path('app_login') }}">Se Connecter</a></li>
                    
                    
                    {% if app.user and app.request.attributes.get('_route') not in ['app_login', 'app_register'] %}

    {# Bouton Profil (USER + ADMIN) #}
    <li class="nav-item ms-3">
        <a href="{{ path('frontend_profile') }}"
           class="btn btn-sm btn-outline-success">
            <i class="bi bi-person-circle me-1"></i>
            Mon profil
        </a>
    </li>

    {# Bouton Admin (ADMIN uniquement) #}
    {% if is_granted('ROLE_ADMIN') %}
        <li class="nav-item ms-3">
            <a href="{{ path('admin_dashboard') }}"
               class="btn btn-sm btn-outline-primary">
                <i class="bi bi-speedometer2 me-1"></i>
                Admin
            </a>
        </li>
    {% endif %}

{% endif %}

                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>
            
        </div>
    </div>
    
</header>