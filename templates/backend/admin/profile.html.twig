{% extends 'backend/baseend.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container mt-4">
    <h3 class="mb-4">Mon profil</h3>
    
  
    <div class="card">
        <div class="card-body">
            {# Vérifier explicitement la variable #}
            {% if profileForm is defined %}
                {{ form_start(profileForm, {'attr': {'class': 'form-horizontal'}}) }}
                
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    {{ form_widget(profileForm.email, {'attr': {'class': 'form-control', 'disabled': 'disabled'}}) }}
                </div>

                <div class="mb-3">
                    <label class="form-label">Username</label>
                    {{ form_widget(profileForm.username, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    <label class="form-label">Téléphone</label>
                    {{ form_widget(profileForm.telephone, {'attr': {'class': 'form-control'}}) }}
                </div>

                <button type="submit" class="btn btn-primary">
                    Enregistrer
                </button>
                
                {{ form_end(profileForm) }}
            {% else %}
                <div class="alert alert-danger">
                    <h4>Erreur : Formulaire non disponible</h4>
                    <p>La variable 'profileForm' n'existe pas dans le contexte.</p>
                    <p>Variables trouvées : 
                        {% for key, value in _context|keys %}
                            "{{ key }}"{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </p>
                    
                    {# Créer un formulaire manuel en attendant #}
                    <form method="post" class="mt-3">
                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input type="text" class="form-control" name="username" value="{{ app.user.username }}">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Téléphone</label>
                            <input type="text" class="form-control" name="telephone" value="{{ app.user.telephone }}">
                        </div>
                        <button type="submit" class="btn btn-primary">Mettre à jour</button>
                    </form>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}