{% extends 'backend/baseend.html.twig' %}

{% block title %}Modifier document{% endblock %}

{% block body %}
<div class="container-fluid">
    <h4 class="mb-3">Modifier le document</h4>
    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form, { attr: { enctype: 'multipart/form-data' } }) }}
                {{ form_widget(form) }}
                <div class="d-flex gap-2 mt-3">
                    <a class="btn btn-secondary" href="{{ path('app_document_index') }}">← Retour</a>
                    <button class="btn btn-warning" type="submit">Mettre à jour</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
