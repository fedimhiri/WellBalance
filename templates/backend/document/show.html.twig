{% extends 'backend/baseend.html.twig' %}

{% block title %}D√©tails document{% endblock %}

{% block body %}
<div class="container-fluid">
    <h4 class="mb-4">D√©tails du document</h4>
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered align-middle mb-0">
                <tbody>
                    <tr><th style="width: 220px;">ID</th><td>{{ document.id }}</td></tr>
                    <tr><th>Titre</th><td>{{ document.titre }}</td></tr>
                    <tr><th>Type</th><td>{{ document.typeDocument }}</td></tr>
                    <tr><th>Cat√©gorie</th><td>{{ document.categorie ? document.categorie.description : '-' }}</td></tr>
                    <tr><th>Membre</th><td>{{ document.user ? document.user.username : '-' }}</td></tr>
                    <tr><th>Date d'upload</th><td>{{ document.dateUpload ? document.dateUpload|date('d/m/Y H:i') : '-' }}</td></tr>
                    <tr><th>Fichier</th>
                        <td>
                            {% if document.cheminFichier %}
                                <a href="{{ asset('uploads/documents/' ~ document.cheminFichier) }}" target="_blank" class="btn btn-sm btn-outline-primary">Ouvrir le fichier</a>
                            {% else %}
                                -
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="d-flex gap-2 mt-3">
                <a class="btn btn-secondary" href="{{ path('app_document_index') }}">‚Üê Retour</a>
                <a class="btn btn-warning" href="{{ path('app_document_edit', {id: document.id}) }}">‚úé Modifier</a>
                <form method="post" action="{{ path('app_document_delete', {id: document.id}) }}" onsubmit="return confirm('Confirmer la suppression ?');" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
                    <button class="btn btn-danger" type="submit">üóë Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
