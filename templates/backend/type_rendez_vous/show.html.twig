{% extends 'backend/baseend.html.twig' %}

{% block title %}Détails Type Rendez-vous{% endblock %}

{% block body %}
<div class="container-fluid">

    <h4 class="mb-4">Détails Type Rendez-vous</h4>

    <div class="card shadow-sm">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered align-middle mb-0">
                    <tbody>
                        <tr>
                            <th style="width: 220px;">ID</th>
                            <td>{{ type_rendez_vous.id }}</td>
                        </tr>
                        <tr>
                            <th>LIBELLÉ</th>
                            <td>{{ type_rendez_vous.libelle }}</td>
                        </tr>
                        <tr>
                            <th>DESCRIPTION</th>
                            <td>{{ type_rendez_vous.description ?: '-' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex gap-2 mt-3">
                <a class="btn btn-secondary" href="{{ path('app_type_rendez_vous_index') }}">
                    ← Retour
                </a>

                <a class="btn btn-warning" href="{{ path('app_type_rendez_vous_edit', {id: type_rendez_vous.id}) }}">
                    ✎ Modifier
                </a>

                {{ include('backend/type_rendez_vous/_delete_form.html.twig', {
                    type_rendez_vous: type_rendez_vous
                }) }}
            </div>

        </div>
    </div>

</div>
{% endblock %}
