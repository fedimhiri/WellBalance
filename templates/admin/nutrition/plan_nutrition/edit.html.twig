{% extends 'backend/baseend.html.twig' %}

{% block title %}Modifier Plan Nutrition{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="fw-bold mb-0">Modifier Plan Nutrition</h4>
        <nav class="d-flex">
            <h6 class="fw-normal text-muted mb-0">
                <a href="{{ path('admin_plan_nutrition_index') }}" class="text-muted">Nutrition / Plans</a> 
                / #{{ plan_nutrition.id }} / Modifier
            </h6>
        </nav>
    </div>
    <div class="d-flex gap-2">
        <a href="{{ path('admin_plan_nutrition_show', {'id': plan_nutrition.id}) }}" 
           class="btn btn-outline-primary">
            <i class="bx bx-show me-2"></i>Voir
        </a>
        <a href="{{ path('admin_plan_nutrition_index') }}" class="btn btn-outline-secondary">
            <i class="bx bx-arrow-back me-2"></i>Retour
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.objectif, 'Objectif du plan') }}
                            {{ form_widget(form.objectif, {'attr': {'class': 'form-select'}}) }}
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.user, 'Utilisateur') }}
                            {{ form_widget(form.user, {'attr': {'class': 'form-select'}}) }}
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.dateDebut, 'Date de début') }}
                            {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.dateFin, 'Date de fin') }}
                            {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        
                        <div class="col-12 mb-3">
                            {{ form_label(form.description, 'Description') }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                        </div>
                        
                        <div class="col-12 mb-3">
                            {{ form_label(form.periode, 'Période') }}
                            {{ form_widget(form.periode, {'attr': {'class': 'form-control', 'readonly': true}}) }}
                            <div class="form-text">Calculée automatiquement</div>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bx bx-save me-2"></i>Enregistrer les modifications
                        </button>
                        <a href="{{ path('admin_plan_nutrition_index') }}" class="btn btn-outline-secondary">
                            Annuler
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="bx bx-stats me-2"></i>Statistiques</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <span class="text-muted small">Nombre de repas :</span>
                    <h5 class="fw-bold">{{ plan_nutrition.repas|length }}</h5>
                </div>
                <div class="mb-3">
                    <span class="text-muted small">Statut :</span>
                    <h5>
                        {% if plan_nutrition.dateFin > date() %}
                            <span class="badge bg-success">Actif</span>
                        {% else %}
                            <span class="badge bg-secondary">Terminé</span>
                        {% endif %}
                    </h5>
                </div>
                <div>
                    <span class="text-muted small">Créé le :</span>
                    <p class="mb-0">{{ plan_nutrition.dateDebut|date('d/m/Y') }}</p>
                </div>
            </div>
        </div>
        
        <div class="card border-0 shadow-sm">
            <div class="card-header">
                <h6 class="mb-0"><i class="bx bx-food-menu me-2"></i>Actions rapides</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('admin_repas_new', {'plan_id': plan_nutrition.id}) }}" 
                       class="btn btn-success">
                        <i class="bx bx-plus me-2"></i>Ajouter un repas
                    </a>
                    <a href="{{ path('admin_repas_index', {'plan': plan_nutrition.id}) }}" 
                       class="btn btn-outline-primary">
                        <i class="bx bx-list-ul me-2"></i>Voir tous les repas
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}